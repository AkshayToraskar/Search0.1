    android:layout_height="match_parent"
    tools:context="com.ak.search.fragment.UserFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

       <!-- <LinearLayout
            android:layout_width="match_parent"
