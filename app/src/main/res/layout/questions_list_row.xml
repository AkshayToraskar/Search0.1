<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="2dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="2dp">



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        app:cardElevation="2dp">

        <!--<android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:elevation="10dp"
        app:cardCornerRadius="2dp">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/tv_question"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:paddingBottom="5dp"
                    android:paddingLeft="30dp"
                    android:paddingTop="5dp"
                    android:text="Question ?"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/ivNes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:src="@drawable/ic_timeline_black_24dp" />

                <TextView
                    android:id="@+id/tv_compulsary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="*"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="25sp"
                    android:visibility="gone" />



            </LinearLayout>

            <View
                android:id="@+id/view_divider"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/dark_background" />


            <LinearLayout
                android:id="@+id/ll_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:weightSum="3">

                <TextView
                    android:id="@+id/txt_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="3"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/btn_date"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/ic_date_range"
                    android:padding="5dp"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_patient_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/txt_patient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="2.5"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/btn_patientname"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/ic_local_hotel"
                    android:padding="5dp"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/txt_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="3"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/btn_time"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/ic_access_time"
                    android:padding="5dp"
                    android:visibility="visible" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="3">


                <ImageView
                    android:id="@+id/iv_capture"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"
                    android:padding="5dp"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/btn_capture_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/ic_image"
                    android:padding="10dp"
                    android:visibility="visible" />

            </LinearLayout>


            <RadioGroup
                android:id="@+id/rg_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:visibility="gone">

                <!--<RadioButton
                    android:id="@+id/rb_opt1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ra_background"
                    android:button="@drawable/radio_button_switch"
                    android:text="Opt1"
                    android:textSize="22sp" />

                <RadioButton
                    android:id="@+id/rb_opt2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ra_background"
                    android:button="@drawable/radio_button_switch"
                    android:text="Opt2"
                    android:textSize="22sp" />-->

            </RadioGroup>

            <RadioGroup
                android:id="@+id/rg_options_conditional"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:visibility="gone">

                <!--<RadioButton
                    android:id="@+id/rb_opt1_conditional"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ra_background"

                    android:button="@drawable/radio_button_switch"
                    android:text="Options 1"
                    android:textSize="22sp" />

                <RadioButton
                    android:id="@+id/rb_opt2_conditional"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:background="@drawable/ra_background"
                    android:button="@drawable/radio_button_switch"
                    android:text="Options 2"
                    android:textSize="22sp" />-->

            </RadioGroup>

            <LinearLayout
                android:id="@+id/ll_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:padding="5dp"
                android:visibility="gone"></LinearLayout>


            <EditText
                android:id="@+id/txt_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/text1"
                android:padding="5dp"
                android:textSize="18sp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/txt_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/num"
                android:inputType="number"
                android:padding="10dp"
                android:textSize="18sp"
                android:visibility="visible" />

            <!--<Button
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="save"
                android:textColor="@android:color/white"
                android:theme="@style/MyButton"
                android:visibility="gone" />-->

        </LinearLayout>
        <!--</android.support.v7.widget.CardView>-->


    </android.support.v7.widget.CardView>


    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/save"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:theme="@style/MyButton"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_question_counter"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/counter_background"
        android:elevation="2.5dp"
        android:gravity="center"
        android:text="1"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

</RelativeLayout>